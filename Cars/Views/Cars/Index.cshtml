@model IEnumerable<Cars.Models.Cars.CarsIndexViewModel>

<div class="d-flex justify-content-between align-items-center mb-3">
	<h1 class="h3 mb-0">Cars</h1>
	<a asp-action="Create" asp-controller="Cars" class="btn btn-primary">Create</a>
</div>




<div class="row g-3">
	@foreach (var car in Model)
	{
		<div class="col-12 col-sm-6 col-md-4">
			<div class="card h-100 shadow-sm">
				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@car.Make</h5>
					<p class="card-text mb-1"><strong>Type:</strong> @car.Model</p>
					<p class="card-text mb-1"><strong>Built:</strong> @car.Color</p>
					<p class="card-text mb-3"><strong>Crew:</strong> @car.Doors</p>
					<p class="card-text mb-3"><strong>Crew:</strong> @car.FuelType</p>
					<p class="card-text mb-3"><strong>Crew:</strong> @car.CreatedAt</p>

					<div class="mt-auto d-flex gap-2">
						<a asp-action="Details" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-sm btn-outline-primary">Details</a>
						<a asp-action="Update" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-sm btn-outline-warning">Update</a>
						<a asp-action="Delete" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-sm btn-outline-danger">Delete</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>
